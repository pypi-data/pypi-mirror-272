# Make file om alle tex tabellen naar xlsx te conveteren
# de utility 'tabular2xls' wordt hiervoor gebruikt

executable = tabular2xls
tabellen_dir = ../ccn/tabellen

# define tex and pdf tagets being generated by the script
depends_iris = iris_data_tabular.tex
targets_iris = $(tabellen_dir)/hoofdstuk2/Tab_2_3_1/iris_data_tabular.xlsx

targets = ${targets_iris}

default: all

all: iris

iris: ${targets_iris}
${targets_iris}: ${depends_iris}
	${executable}  ${depends_iris} --output_filename ${targets_iris}

clean:
	@$(foreach file, $(targets), test -f $(file) && rm -v $(file) || echo No $(file);)