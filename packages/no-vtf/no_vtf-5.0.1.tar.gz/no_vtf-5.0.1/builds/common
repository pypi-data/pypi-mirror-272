set +x
# shellcheck source=/dev/null
source ~/.buildenv

set -x
set -e
set -o pipefail

shopt -s expand_aliases

alias exec='exec '
alias sudo='sudo '
alias wine='wine '

alias curl='curl --no-progress-meter --fail'

alias gpg='gpg --quiet --batch --keyserver hkps://keys.openpgp.org'

alias pip='python3.10 -m pip --quiet --no-input --disable-pip-version-check'
alias pip-install='pip install --no-warn-script-location'

alias nox='python3.10 -m nox'

source builds/debian/common
